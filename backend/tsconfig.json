{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "src/app.ts",
    "src/controllers/**/*",
    "src/models/**/*",
    "src/routes/**/*",
    "src/server.ts"
  ]
}
